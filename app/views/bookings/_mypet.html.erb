  <h1><%= @pet.name %></h1>

  <%= cl_image_tag @pet[0].photo.key, height: 300, width: 400, crop: :fill %>

  <h4><%= @pet[0].description %></h4>

  <br>
  <br>
  <%= link_to "Book This Pet", new_pet_booking_path(@pet[0]), class: "btn btn-primary"%>
  <% if current_user.pets.include?(@pet[0]) == true %>
  <%= link_to "Delete Pet Listing", pet_path(@pet[0]), method: 'delete', class: "btn btn-primary"%>
  <%= link_to "Edit Pet Listing", edit_pet_path(@pet[0]), class: "btn btn-primary"%>
  <% end %>
  <%= link_to "Back", pets_path, class: "btn btn-outline-dark"%>
  <%= render @pet[0].reviews %>
