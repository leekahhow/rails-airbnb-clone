<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to pets_path, class: "navbar-brand" do %>
  <%= image_tag "https://res.cloudinary.com/df6dcketg/image/upload/v1591425157/Screenshot_2020-06-06_at_2.30.50_PM_kbnr2l.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
      <li class="nav-item active">
        <%= link_to "Home", pets_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Pets", pets_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to 'Bookings', user_bookings_path(@booking), class: "nav-link"  %>
