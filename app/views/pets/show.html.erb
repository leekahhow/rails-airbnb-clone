<br>
<div class = "mx-auto" style="width: 500px;">
  <h1><%= @pet.name %></h1>

  <%= cl_image_tag @pet.photo.key, height: 300, width: 400, crop: :fill %>

  <h4><%= @pet.description %></h4>

  <br>
  <br>
  <%= link_to "Book This Pet", new_pet_booking_path(@pet), class: "btn btn-primary"%>
  <% if current_user.pets.include?(@pet) == true %>
  <%= link_to "Delete Pet Listing", pet_path(@pet), method: 'delete', class: "btn btn-primary"%>
  <%= link_to "Edit Pet Listing", edit_pet_path(@pet), class: "btn btn-primary"%>
  <% end %>
  <%= link_to "Back", pets_path, class: "btn btn-outline-dark"%>
  <%= render @pet.reviews %>
</div>
